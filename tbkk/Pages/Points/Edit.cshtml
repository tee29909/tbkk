@page
@model tbkk.Pages.Points.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Point</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Point.PointID" />
            <div class="form-group">
                <label asp-for="Point.NamePoint" class="control-label"></label>
                <input asp-for="Point.NamePoint" class="form-control" />
                <span asp-validation-for="Point.NamePoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Point.Point_PartID" class="control-label"></label>
                <select asp-for="Point.Point_PartID" class="form-control" asp-items="ViewBag.Point_PartID"></select>
                <span asp-validation-for="Point.Point_PartID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
