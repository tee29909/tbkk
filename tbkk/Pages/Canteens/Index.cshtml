@model tbkk.Pages.Canteens.IndexModel

@{
    ViewData["Title"] = "Index";
}
    <div id="content-wrapper">
        <div name="55555" class="card-layout ">
            <h1>Index</h1>

            <p>
                <a asp-page="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Canteen[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Canteen[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Canteen[0].Line)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Canteen[0].Call)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Canteen[0].Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Canteen[0].Company)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Canteen)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Line)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Call)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Company.Image)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.CanteenID">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.CanteenID">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.CanteenID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>






        </div>
    </div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    var nav = document.getElementById("Management");
    var name = document.getElementById("nav_name").innerHTML = "Name: @Model.Employee.FirstName @Model.Employee.LastName Position: @Model.Employee.Position.PositionName";

    var nav2 = document.getElementById("Management OT");
        @{ if (Model.Employee.Position.PositionName.Equals("Manager") || Model.Employee.Position.PositionName.Equals("admin"))
            {
                @:nav.style.display = "block";
            }
            if (Model.Employee.Department.DepartmentName.Equals("Human Resource") || Model.Employee.Position.PositionName.Equals("admin"))
            {
                @:nav2.style.display = "block";
            }
        }
        var img = document.getElementById("myImg").src = "/Upload/@Model.Employee.Image";



    </script>

}
