@page
@model tbkk.Pages.listOTs.FoodSetModel

@{
    ViewData["Title"] = "FoodSet";
}
<div id="content-wrapper">
    <div name="55555" class="card-layout ">
        <h1>FoofSet</h1>

        <ol class="breadcrumb ">
            <li class="breadcrumb-item active d-print-none">Management OT</li>
            <li class="breadcrumb-item active d-print-none">Canteen</li>
            <li class="breadcrumb-item active d-print-none">FoofSet</li>

        </ol>

        <hr />

        <h4>Canten :@Model.Canteen.Name</h4>
        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Create</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <form method="post">

                        <div class="modal-body">
                            <div class="row ">
                                <div class="col">


                                    <div class="row ">
                                        <div class="col">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="FoodSet.FoodSetcoManul" class="control-label"></label>
                                                <input asp-for="FoodSet.FoodSetcoManul" class="form-control" />
                                                <span asp-validation-for="FoodSet.FoodSetcoManul" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="FoodSet.NameSet" class="control-label"></label>
                                                <input asp-for="FoodSet.NameSet" class="form-control" />
                                                <span asp-validation-for="FoodSet.NameSet" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row ">
                                        <div class="col">

                                            <div class="form-group">
                                                <label asp-for="FoodSet.Price" class="control-label"></label>
                                                <input asp-for="FoodSet.Price" class="form-control" />
                                                <span asp-validation-for="FoodSet.Price" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col">
                                            <div hidden class="form-group">
                                                <label asp-for="FoodSet.Canteen_CanteenID" class="control-label"></label>
                                                <input asp-for="FoodSet.Canteen_CanteenID" class="form-control" value="@Model.Canteen.CanteenID" />
                                                <input asp-for="FoodSet.Status" class="form-control" value="Open" />

                                            </div>
                                        </div>
                                    </div>




                                </div>
                            </div>


                            <!-- Modal footer -->

                            <div class="modal-footer">
                                <input type="submit" value="Confirm" class="btn btn-outline-success" />
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="Edit">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Edit</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <form method="post">

                        <div class="modal-body">
                            <div class="row ">
                                <div class="col">


                                    <div class="row ">
                                        <div class="col">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="FoodSetEdit.FoodSetcoManul" class="control-label"></label>
                                                <input asp-for="FoodSetEdit.FoodSetcoManul" class="form-control" />
                                                <span asp-validation-for="FoodSetEdit.FoodSetcoManul" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="FoodSetEdit.NameSet" class="control-label"></label>
                                                <input asp-for="FoodSetEdit.NameSet" class="form-control" />
                                                <span asp-validation-for="FoodSetEdit.NameSet" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row ">
                                        <div class="col">

                                            <div class="form-group">
                                                <label asp-for="FoodSetEdit.Price" class="control-label"></label>
                                                <input asp-for="FoodSetEdit.Price" class="form-control" />
                                                <span asp-validation-for="FoodSetEdit.Price" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col">
                                            <div hidden class="form-group">

                                                <input asp-for="FoodSetEdit.Canteen_CanteenID" class="form-control" />
                                                <input asp-for="FoodSetEdit.Status" class="form-control" />
                                                <input asp-for="FoodSetEdit.FoodSetID" class="form-control" />

                                            </div>
                                        </div>
                                    </div>




                                </div>
                            </div>


                            <!-- Modal footer -->

                            <div class="modal-footer">
                                <input type="submit" asp-page-handler="Edit" value="Confirm" class="btn btn-outline-success" />
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
       
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                FoofSet
                <button type="button" class="btn btn-outline-info float-right" data-toggle="modal" data-target="#myModal">Create</button>
            </div>

            <div class="card-body">
                <div class="table-responsive">


                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FoodSetList[0].FoodSetcoManul)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FoodSetList[0].NameSet)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FoodSetList[0].Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FoodSetList[0].Status)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FoodSetList)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FoodSetcoManul)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameSet)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>

                                    <td>
                                        <form method="post">
                                            <samp class="btn btn-outline-warning" onclick="getFoodSet(@item.FoodSetID)" data-toggle="modal" data-target="#Edit">Edit</samp>|
                                            @{ if (item.Status.Equals("Close"))
                                                {
                                                    <button class="btn btn-outline-success" type="submit" asp-page-handler="Open" asp-route-id="@item.FoodSetID">Open</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-danger" type="submit" asp-page-handler="Close" asp-route-id="@item.FoodSetID">Close</button>
                                                }

                                            }


                                        </form>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <a asp-page="./ManageCanteen" class="btn btn-outline-secondary">Back</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


<script>
    var nav = document.getElementById("Management");
    var name = document.getElementById("nav_name").innerHTML = "Name: @Model.Employee.FirstName @Model.Employee.LastName Position: @Model.Employee.Position.PositionName";

    var nav2 = document.getElementById("Management OT");
        @{ if (Model.Employee.Position.PositionName.Equals("Manager") || Model.Employee.Position.PositionName.Equals("admin"))
            {
                @:nav.style.display = "block";
            }
            if (Model.Employee.Department.DepartmentName.Equals("Human Resource") || Model.Employee.Position.PositionName.Equals("admin"))
            {
                @:nav2.style.display = "block";
            }
        }
        var img = document.getElementById("myImg").src = "/Upload/@Model.Employee.Image";






        function getFoodSet(id) {
            $.ajax({
                type: "GET",
                url: "/api/getFoodSets/" + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {

                    $('#FoodSetEdit_FoodSetID').val(data.foodSetID);
                    $('#FoodSetEdit_FoodSetcoManul').val(data.foodSetcoManul);
                    $('#FoodSetEdit_NameSet').val(data.nameSet);
                    $('#FoodSetEdit_Price').val(data.price);
                    $('#FoodSetEdit_Status').val(data.status);
                    $('#FoodSetEdit_Canteen_CanteenID').val(data.canteen_CanteenID);


                    console.log(data);
                },
                failure: function (data) {
                    alert(data.responseText);
                }, //End of AJAX failure function
                error: function (data) {
                    alert(data.responseText);
                }


            });




        }








          $(window).on('load', function () {


             var a = @Model.Debug;

            if (a == 1) {

                $('#myModal').modal('show');
            } else if (a == 2) {

                $('#Edit').modal('show');
            }

    });



</script>
}
